<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewHorario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/editText</item>
        <item name="android:background">@color/cabecalho_listView</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="textViewCabecalho">
        <item name="android:textSize">@dimen/cabecalho</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="mensagem_erro">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/erro</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>