<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.inatel.br.apphelp.control.CriarAtividadeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fotoID"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/common_google_signin_btn_icon_dark"
                        />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Nome: "
                        android:textSize="18sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Criar Atividade Extra"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/nomeAtividadeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome da atividade"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:textSize="22sp"/>

                <Spinner
                    android:id="@+id/tipoID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                        >
                </Spinner>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo mensal: "
                    android:textSize="22sp"/>

                <Spinner
                    android:id="@+id/tempoID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/adicionarAlunoID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar Aluno"/>

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do Aluno"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/alunoSelecAtividadeID"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="25sp"
                    android:layout_weight="0.7"
                    android:hint="Nenhum aluno adicionado"/>

                <ImageButton
                    android:id="@+id/removerAlunoAtivID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/cancel"
                    android:visibility="invisible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/erroAtividadeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/mensagem_erro"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/voltarAtivID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Voltar" />

                <Button
                    android:id="@+id/criarAtividadeID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Criar"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="right"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
